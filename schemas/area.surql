DEFINE TABLE OVERWRITE area SCHEMALESS;
DEFINE FIELD OVERWRITE name ON area;

DEFINE TABLE OVERWRITE neighbors TYPE RELATION IN area OUT area ENFORCED;

DEFINE TABLE OVERWRITE game_area TYPE RELATION IN area OUT game ENFORCED SCHEMALESS PERMISSIONS NONE;
DEFINE FIELD OVERWRITE area ON game_areas TYPE record<area> PERMISSIONS FULL;
DEFINE FIELD OVERWRITE game ON game_areas TYPE record<game> PERMISSIONS FULL;
DEFINE FIELD OVERWRITE open ON game_areas TYPE bool DEFAULT true PERMISSIONS FULL;
